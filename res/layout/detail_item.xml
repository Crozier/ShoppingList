<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"
		android:layout_gravity="right">

		<ImageButton
			android:id="@+id/detail_item_DeleteButton"
			android:background="@drawable/ic_delete"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_marginLeft="125dip"
			android:layout_marginRight="8dip"
			android:layout_gravity="right"
			android:contentDescription="Delete"/>

		<ImageButton
			android:id="@+id/detail_item_CancelButton"
			android:background="@drawable/ic_cancel"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_marginLeft="8dip"
			android:layout_marginRight="8dip"
			android:layout_gravity="right"
			android:contentDescription="Cancel"/>
		
		<ImageButton
			android:id="@+id/detail_item_SaveButton"
			android:background="@drawable/ic_save"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_marginLeft="8dip"
			android:layout_marginRight="8dip"
			android:layout_gravity="right"
			android:contentDescription="Save"/>
	</LinearLayout>

    <!--  Spacing  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top" >

        <TextView
            android:id="@+id/detail_item_Name_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/detail_item_Name_EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.83"
            android:ems="10"
            android:hint="Enter item name" >

            <requestFocus />
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3" >

        <TextView
            android:id="@+id/detail_item_Notes_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/detail_item_Notes_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Enter any notes"
            android:inputType="textMultiLine" />

    </LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="6" >
	</LinearLayout>
</LinearLayout>